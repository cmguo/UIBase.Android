<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.xhb.uibase.demo.components.basic.XHBRadioButtonFragment.Model" />

        <import type="com.xhb.uibase.demo.components.basic.XHBRadioButtonFragment.Style" />

        <import type="com.xhb.uibase.demo.components.basic.XHBRadioButtonFragment" />

        <variable
            name="fragment"
            type="XHBRadioButtonFragment" />

        <variable
            name="model"
            type="Model" />

        <variable
            name="style"
            type="Style" />
    </data>

    <FrameLayout
        android:id="@+id/xhb_component_radio_buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TestComponent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/radio_button_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:data="@{model.states}"
            app:itemDecoration="@{style.itemDecoration}"
            app:itemLayout="@{style.itemLayout}">

        </androidx.recyclerview.widget.RecyclerView>


    </FrameLayout>

</layout>