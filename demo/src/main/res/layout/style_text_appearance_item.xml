<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="java.util.Map.Entry" />
        <import type="com.eazy.uibase.demo.resources.StylesFragment.Styles" />
        <variable
            name="data"
            type="Entry&lt;String, Integer&gt;" />
        <variable
            name="styles"
            type="Styles" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:textAppearance="@{data.value}"
            android:text="@{styles.textTitle(data.key)}"/>

        <TextView
            android:id="@+id/radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{styles.textDetail(data.value)}"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>