<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:xhb="http://schemas.android.com/apk/com.xhb.uibase"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.xhb.uibase.demo.components.simple.XHBTabBarFragment.Styles" />

        <variable
            name="styles"
            type="Styles" />

    </data>

    <com.xhb.uibase.widget.tabbar.XHBRoundIndicator
        android:id="@+id/lineIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xhb:borderRadius="@{styles.borderRadius}"
        xhb:paddingX="@{styles.paddingX}"
        xhb:paddingY="@{styles.paddingY}"
        />

</layout>