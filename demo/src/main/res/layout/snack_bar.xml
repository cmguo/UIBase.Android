<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.eazy.uibase.demo.components.simple.ZTipViewFragment.SnackStyles" />

        <variable
            name="styles"
            type="SnackStyles" />

    </data>

    <com.eazy.uibase.widget.ZTipView
        android:id="@+id/tipView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tipAppearance="@{styles.tipAppearance}"
        app:maxWidth="@{styles.maxWidth}"
        app:message="@{styles.message}"
        app:singleLine="@{styles.singleLine}"
        app:leftButton="@{styles.leftButton}"
        app:rightButton="@{styles.rightButton}"
        app:icon="@{styles.icon}"/>

</layout>