<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.eazy.uibase.demo.components.dataview.ZListFragment" />

        <import type="com.eazy.uibase.demo.components.dataview.ZListFragment.Styles" />

        <variable
            name="fragment"
            type="com.eazy.uibase.demo.components.dataview.ZListFragment" />

        <variable
            name="styles"
            type="Styles" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f0f0"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="只读类展示列表"
                    android:textColor="#FFAAAAAA"
                    android:textSize="16sp" />

                <com.eazy.uibase.widget.LabelTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:mainTitle="标签文本"
                    app:paddingHorizontal="10dp"
                    app:rightTextContent="显示文本"
                    app:rightView="textView" />

                <com.eazy.uibase.widget.LabelTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    app:mainTitle="标签文本"
                    app:paddingHorizontal="10dp"
                    app:rightTextContent="显示文本"
                    app:rightView="textView" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="可点击不带图标类列表"
                    android:textColor="#FFAAAAAA"
                    android:textSize="16sp" />

                <com.eazy.uibase.widget.LabelTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:mainTitle="标签文本"
                    app:paddingHorizontal="10dp"
                    app:rightView="arrowView" />

                <com.eazy.uibase.widget.LabelTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    app:mainTitle="标签文本"
                    app:paddingHorizontal="10dp"
                    app:rightView="arrowView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="可点击带图标、说明文字、徽章、icon类列表"
                    android:textColor="#FFAAAAAA"
                    android:textSize="16sp" />

                <com.eazy.uibase.widget.LabelTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:leftIconDrawable="@drawable/common_list_item_default_icon"
                    app:mainTitle="标签文本"
                    app:paddingHorizontal="10dp"
                    app:rightView="arrowView" />

                <com.eazy.uibase.widget.LabelTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    app:leftIconDrawable="@drawable/common_list_item_default_icon"
                    app:mainTitle="标签文本"
                    app:paddingHorizontal="10dp"
                    app:rightTextContent="说明文字"
                    app:rightView="arrowView|textView" />

                <com.eazy.uibase.widget.LabelTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    app:leftIconDrawable="@drawable/common_list_item_default_icon"
                    app:mainTitle="标签文本"
                    app:paddingHorizontal="10dp"
                    app:rightView="arrowView|badgeView" />

                <com.eazy.uibase.widget.LabelTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    app:leftIconDrawable="@drawable/common_list_item_default_icon"
                    app:mainTitle="标签文本"
                    app:paddingHorizontal="10dp"
                    app:rightView="arrowView|imageView" />

                <com.eazy.uibase.widget.LabelTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    app:leftIconDrawable="@drawable/common_list_item_default_icon"
                    app:mainTitle="标签文本"
                    app:paddingHorizontal="10dp"
                    app:rightView="arrowView"
                    app:subTitle="副标签文本" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</layout>