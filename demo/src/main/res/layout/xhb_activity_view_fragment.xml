<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.xhb.uibase.demo.components.simple.XHBActivityViewFragment.Styles" />

        <import type="com.xhb.uibase.demo.components.simple.XHBActivityViewFragment.Model" />

        <import type="com.xhb.uibase.demo.components.simple.XHBActivityViewFragment" />

        <variable
            name="fragment"
            type="XHBActivityViewFragment" />

        <variable
            name="model"
            type="Model" />

        <variable
            name="styles"
            type="Styles" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <include layout="@layout/activity_views"
                android:id="@+id/activityViews"
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:lists="@{model.lists}"
                app:listener="@{fragment}"/>

        </FrameLayout>

        <com.xhb.uibase.widget.XHBButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_gravity="bottom"
            android:text="弹出面板"
            android:onClick="@{fragment.buttonClick}"
            />

    </LinearLayout>

</layout>