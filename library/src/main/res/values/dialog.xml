<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="dialogStyle" />

    <declare-styleable name="ZDialog">
        <attr name="image" format="reference"/>
        <attr name="closeIconColor" format="color"/>
        <attr name="title"/>
        <attr name="subTitle"/>
        <attr name="content"/>
        <attr name="confirmButton" format="reference"/>
        <attr name="cancelButton" format="reference"/>
        <attr name="moreButtons" format="reference"/>
    </declare-styleable>

    <dimen name="dialog_width">296dp</dimen>
    <dimen name="dialog_border_radius">8dp</dimen>
    <dimen name="dialog_padding_x">24dp</dimen>
    <dimen name="dialog_close_padding">12dp</dimen>
    <dimen name="dialog_top_padding">24dp</dimen>
    <dimen name="dialog_sub_title_padding">8dp</dimen>
    <dimen name="dialog_content_padding">16dp</dimen>
    <dimen name="dialog_button_width">116dp</dimen>
    <dimen name="dialog_button_padding">14dp</dimen>
    <dimen name="dialog_button_padding_x">16dp</dimen>
    <dimen name="dialog_button_padding2">24dp</dimen> <!-- with content -->
    <dimen name="dialog_checkbox_padding">22dp</dimen>
    <dimen name="dialog_bottom_padding">18dp</dimen>

    <style name="ZDialog">
        <item name="android:orientation">vertical</item>
        <item name="android:minWidth">@dimen/dialog_width</item>
        <item name="android:maxWidth">@dimen/dialog_width</item>
        <item name="confirmButton">@string/confirm</item>
        <item name="cancelButton">@string/cancel</item>
    </style>

    <style name="ZButton.Appearance.Dialog">
        <item name="android:textColor">@color/bluegrey_900_selected_disabled</item>
        <item name="backgroundColor">@color/transparent_pressed_disabled</item>
        <item name="height">48dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="paddingX">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="iconSize">18dp</item>
        <item name="iconPadding">4dp</item>
    </style>

    <style name="RoundDrawable.Dialog">
        <item name="fillColor">@color/bluegrey_00</item>
        <item name="cornerRadius">@dimen/dialog_border_radius</item>
    </style>

</resources>
