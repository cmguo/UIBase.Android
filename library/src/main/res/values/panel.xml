<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="panelStyle" format="reference"/>

    <declare-styleable name="ZPanel">
        <attr name="titleBar" format="reference"/>
        <attr name="content"/>
        <attr name="bottomButton" format="reference"/>
        <attr name="cornerRadius"/>
    </declare-styleable>

    <dimen name="panel_bottom_height">48dp</dimen>
    <dimen name="panel_border_radius">12dp</dimen>

    <style name="ZPanel">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:minHeight">200dp</item>
        <item name="android:maxHeight">600dp</item>
        <item name="cornerRadius">@dimen/panel_border_radius</item>
    </style>

    <style name="ZButton.Appearance.Panel" parent="ZButton.Appearance.TitleBar"/>

</resources>
