<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="actionSheetStyle" format="reference"/>

    <declare-styleable name="ZActionSheet">
        <attr name="buttons" format="reference"/>
        <attr name="title"/>
        <attr name="subTitle"/>
        <attr name="icon"/>
    </declare-styleable>

    <dimen name="action_sheet_max_height">360dp</dimen>
    <dimen name="action_sheet_padding_y">12dp</dimen>
    <dimen name="action_sheet_icon_size">40dp</dimen>
    <dimen name="action_sheet_icon_padding">24dp</dimen>
    <dimen name="action_sheet_title_padding">12dp</dimen>
    <!-- TODO: why can't use -->
    <style name="action_sheet_text_appearance">@style/TextAppearance.Z.Head3</style>
    <style name="action_sheet_text_appearance2">@style/TextAppearance.Z.Body.Small</style>

    <style name="ZActionSheet">
    </style>

    <style name="ZButton.Action">
        <item name="textColor">@color/bluegrey_900_selected_disabled</item>
        <item name="backgroundColor">@color/transparent_pressed_disabled</item>
        <item name="height">48dp</item>
        <item name="borderRadius">0dp</item>
        <item name="paddingX">0dp</item>
        <item name="textSize">16sp</item>
        <item name="iconSize">18dp</item>
        <item name="iconPadding">4dp</item>
    </style>

</resources>
