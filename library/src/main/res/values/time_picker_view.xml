<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="timePickerViewStyle" format="reference"/>

    <dimen name="time_picker_view_max_height">360dp</dimen>
    <dimen name="time_picker_view_item_padding_x">16dp</dimen>
    <dimen name="time_picker_view_item_padding_y">12dp</dimen>
    <dimen name="time_picker_view_icon_size">24dp</dimen>
    <dimen name="time_picker_view_icon_padding">8dp</dimen>
    <style name="time_picker_view_text_appearance" parent="TextAppearance.Z.Body.Large">
        <item name="android:textColor">@color/bluegrey800_selected</item>
    </style>

    <declare-styleable name="ZTimePickerView">
        <attr name="timeMode" format="enum">
            <enum name="yearMonthDay" value="0"/>
            <enum name="yearMonthWithDayWithWeek" value="1"/>
            <enum name="monthWithDayWithWeekHourMinute" value="2"/>
        </attr>
        <attr name="timeInterval" format="integer"/>
        <attr name="labels" format="string"/>
        <attr name="itemsVisibleCount" format="integer"/>
        <attr name="cyclic" format="boolean"/>
        <attr name="centerLabel" format="boolean"/>
        <attr name="lunar" format="boolean"/>
        <attr name="selectTime" format="string"/>
        <attr name="startTime" format="string"/>
        <attr name="endTime" format="string"/>
        <attr name="android:textAppearance"/>
    </declare-styleable>

    <style name="ZTimePickerView">
        <item name="android:textAppearance">@style/time_picker_view_text_appearance</item>
    </style>

</resources>
