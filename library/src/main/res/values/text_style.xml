<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Z" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/bluegrey_900_disabled</item>
    </style>

    <style name="TextAppearance.Z.Head">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.Z.Head0">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="TextAppearance.Z.Head1">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextAppearance.Z.Head2">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TextAppearance.Z.Head3">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.Z.Head4">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/bluegrey_800_disabled</item>
    </style>

    <style name="TextAppearance.Z.Body">
    </style>
    <style name="TextAppearance.Z.Body.Large">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TextAppearance.Z.Body.Middle">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.Z.Body.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/bluegrey_800_disabled</item>
    </style>

    <style name="TextAppearance.Z.Secondary">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/bluegrey_700</item>
    </style>
    <style name="TextAppearance.Z.Tip">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/bluegrey_700</item>
    </style>

    <style name="EmptyTextAppearance">
        <!-- for TextView sub class not controlled by textAppearance, for example ZButton -->
    </style>

</resources>