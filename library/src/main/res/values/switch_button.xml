<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="switch_button_width">48dp</dimen> <!-- TODO: 40dp -->
    <dimen name="switch_button_height">24dp</dimen>
    <dimen name="switch_button_radius">12dp</dimen>
    <dimen name="switch_button_thumb_padding">2dp</dimen>
    <dimen name="switch_button_thumb_size">24dp</dimen>
    <dimen name="switch_button_thumb_radius">12dp</dimen>

    <style name="ZSwitchButton" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:layout_width">@dimen/switch_button_width</item>
        <item name="android:layout_height">@dimen/switch_button_height</item>
    </style>

    <!-- track drawable -->

    <style name="ZSwitchButton.Track">
        <item name="fillColor">@color/bluegrey_300_checked</item>
        <item name="borderRadius">@dimen/switch_button_radius</item>
    </style>

    <!-- thumb drawable -->

    <style name="ZSwitchButton.Thumb">
        <item name="fillColor">@color/bluegrey_00</item>
        <item name="borderRadius">@dimen/switch_button_thumb_radius</item>
        <item name="borderSize">@dimen/switch_button_thumb_padding</item>
        <item name="android:width">@dimen/switch_button_thumb_size</item>
        <item name="android:height">@dimen/switch_button_thumb_size</item>
    </style>

</resources>
