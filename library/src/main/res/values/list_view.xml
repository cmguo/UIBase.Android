<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="listViewStyle" format="reference"/>

    <declare-styleable name="ZListView">
        <attr name="headerAppearance" format="reference"/>
        <attr name="itemAppearance" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ZListItemAppearance">
        <attr name="paddingX"/>
        <attr name="paddingY"/>
        <attr name="subTextPadding" format="dimension"/>
        <attr name="textAppearance"/>
        <attr name="subTextAppearance" format="reference"/>
        <attr name="iconSize"/>
        <attr name="iconSize2" format="dimension"/>
        <attr name="iconPadding"/>
        <attr name="iconPadding2" format="dimension"/>
        <attr name="buttonAppearence" format="reference"/>
