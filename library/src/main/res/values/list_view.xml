    <dimen name="list_item_view_padding_x">16dp</dimen>
    <dimen name="list_item_view_padding_y">8dp</dimen>
    <dimen name="list_item_view_sub_text_padding">8dp</dimen>
    <dimen name="list_item_view_icon_size">18dp</dimen>
