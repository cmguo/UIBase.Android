<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CheckBoxStates">
        <attr name="state_half_checked" format="boolean" />
    </declare-styleable>

    <dimen name="check_box_height">24dp</dimen>
    <dimen name="check_box_textSize">16sp</dimen>
    <dimen name="check_box_radius">4dp</dimen>
    <dimen name="check_box_icon_size">18dp</dimen>
    <dimen name="check_box_border_size">2dp</dimen>
    <dimen name="check_box_text_padding">7dp</dimen>

    <style name="ZCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:maxHeight">@dimen/check_box_height</item>
        <item name="android:minHeight">@dimen/check_box_height</item>
        <item name="android:paddingLeft">@dimen/check_box_text_padding</item>
    </style>

    <!-- background drawable -->

    <style name="ZCheckBox.Background">
        <item name="fillColor">@color/bluegrey00_checked_disabled</item>
        <item name="borderRadius">@dimen/check_box_radius</item>
        <item name="borderSize">@dimen/check_box_border_size</item>
        <item name="borderColor">@color/bluegrey500_checked_disabled</item>
        <item name="android:width">@dimen/check_box_icon_size</item>
        <item name="android:height">@dimen/check_box_icon_size</item>
    </style>

</resources>
