<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ZButtonLoadingLayout">
        <attr name="loadingDrawable" format="reference" />
        <attr name="loadingText" format="reference" />
    </declare-styleable>

    <style name="Z.Button" parent="Z">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Z.Button.Primary" parent="Z.Button">
        <item name="android:background">@drawable/button_primary_bg</item>
        <item name="android:textColor">@color/static_bluegrey_900</item>
    </style>

    <style name="Z.Button.Primary.Large" parent="Z.Button.Primary">
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Z.Button.Primary.Medium" parent="Z.Button.Primary">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Z.Button.Primary.Small" parent="Z.Button.Primary">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
