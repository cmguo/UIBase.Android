    <style name="WhiteDialogEditTextBgStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/dialog_input_box_bg_color</item>
        <item name="android:textColor">@color/static_bluegrey_900</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColorHint">@color/static_bluegrey_300</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="MyDialogFragment" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
    </style>

    <!--5.0.0白色输入框基本样式,部分属性不适用时可覆盖-->
    <style name="NormalEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@color/bluegrey_00</item>
        <item name="android:textSize">@dimen/big_textsize</item>
        <item name="android:textColorHint">@color/bluegrey_300</item>
        <item name="android:textColor">@color/bluegrey_900</item>
        <item name="android:textCursorDrawable">@drawable/input_cursor</item>
    </style>

    <!--5.0 线性背景输入框-->
    <style name="MaterialEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textSize">@dimen/EditText_TextSize</item>
        <item name="android:textColor">@color/bluegrey_900</item>
        <item name="android:background">@drawable/bg_edit_text_selector</item>
        <item name="android:textColorHint">@color/bluegrey_300</item>
        <item name="android:textCursorDrawable">@drawable/shape_edit_text_cursor</item>
    </style>

    <!--5.0 黄色填充按钮-->
    <style name="YellowLargeButtonStyle" parent="YellowNormalButtonStyle">
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/bg_yellow_large_button_selector</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--5.0 黄色填充按钮，不可点击颜色修改-->
    <style name="YellowLargeButtonStyle2" parent="YellowNormalButtonStyle">
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/bg_yellow_large_button_selector_2</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--5.0 黄色填充按钮-->
    <style name="YellowMiddleButtonStyle" parent="YellowNormalButtonStyle">
        <item name="android:layout_height">39dp</item>
        <item name="android:background">@drawable/bg_yellow_large_button_selector</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!--5.0 黄色填充按钮-->
    <style name="YellowSmallButtonStyle" parent="YellowNormalButtonStyle">
        <item name="android:layout_height">24dp</item>
        <item name="android:background">@drawable/bg_yellow_small_button_selector</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--5.0 黄色填充按钮-->
    <style name="YellowNormalButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_yellow_normal_button_selector</item>
        <item name="android:textColor">@color/color_yellow_button_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--5.0 其他状态按钮-->
