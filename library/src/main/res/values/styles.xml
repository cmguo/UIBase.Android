        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/bluegrey_500</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--5.0 label圆角底框-->
    <style name="LabelButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/commonlib_shape_gray_corner_2</item>
        <item name="android:textColor">@color/bluegrey_700</item>
        <item name="android:textSize">@dimen/small_textsize</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <!--弹窗黄色填充按钮-->
    <style name="DialogYellowButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_dialog_yellow_button_selector</item>
        <item name="android:textColor">#1D2126</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--弹窗灰色填充按钮-->
    <style name="DialogGreyButtonStyle" parent="DialogYellowButtonStyle">
        <item name="android:background">@drawable/bg_dialog_grey_button_selector</item>
        <item name="android:textColor">@color/bluegrey_800</item>
    </style>

    <!--弹窗蓝色填充按钮-->
    <style name="DialogBlueButtonStyle" parent="DialogYellowButtonStyle">
        <item name="android:background">@drawable/bg_dialog_blue_button_selector</item>
        <item name="android:textColor">#1970F2</item>
    </style>

    <!--浅红色填充按钮（注销等警告）-->
    <style name="LightRedButtonStyle" parent="DialogYellowButtonStyle">
        <item name="android:background">@drawable/shape_light_red_button_bg</item>
        <item name="android:textColor">@color/red_500</item>
    </style>


    <style name="myAppTheme" parent="@style/Theme.AppCompat">
        <!--是否显示系统启动应用时默认加载的默认页-->
        <!--<item name="android:windowDisablePreview">true</item>-->
        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <item name="android:windowBackground">@color/bluegrey_00</item>
        <item name="colorPrimary">@color/bluegrey_00</item>
        <item name="colorPrimaryDark">@color/bluegrey_00</item>
        <item name="colorAccent">@color/brand_500</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="overlapAnchor">false</item>
    </style>

    <!-- animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
