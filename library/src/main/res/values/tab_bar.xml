<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- XHBLineIndicator -->

    <attr name="lineIndicatorStyle" format="reference"/>

    <declare-styleable name="XHBLineIndicator">
        <attr name="widthMode">
            <enum name="match_edge" value="0"/>
            <enum name="wrap_content" value="1"/>
            <enum name="exactly" value="2"/>
        </attr>
        <attr name="lineWidth" format="dimension" />
        <attr name="lineHeight" format="dimension" />
        <attr name="longLineHeight" format="dimension" />
        <attr name="borderRadius"/>
        <attr name="offsetX" format="dimension"/>
        <attr name="offsetY" format="dimension"/>
        <attr name="color"/>
        <attr name="longLineColor" format="color"/>
    </declare-styleable>

    <dimen name="xhb_line_indicator_line_width">24dp</dimen>
    <dimen name="xhb_line_indicator_line_height">4dp</dimen>
    <dimen name="xhb_line_indicator_long_line_height">1dp</dimen>
    <dimen name="xhb_line_indicator_border_radius">4dp</dimen>
    <dimen name="xhb_line_indicator_offset_x">4dp</dimen>
    <dimen name="xhb_line_indicator_offset_y">0dp</dimen>
    <color name="xhb_line_indicator_color">@color/brand_500</color>
    <color name="xhb_line_indicator_long_line_color">@color/bluegrey_100</color>

    <style name="XHBLineIndicator">
        <item name="widthMode">exactly</item>
        <item name="lineWidth">@dimen/xhb_line_indicator_line_width</item>
        <item name="lineHeight">@dimen/xhb_line_indicator_line_height</item>
        <item name="borderRadius">@dimen/xhb_line_indicator_border_radius</item>
        <item name="offsetX">@dimen/xhb_line_indicator_offset_x</item>
        <item name="offsetY">@dimen/xhb_line_indicator_offset_y</item>
        <item name="color">@color/xhb_line_indicator_color</item>
        <item name="longLineColor">@color/xhb_line_indicator_long_line_color</item>
    </style>

    <!-- XHBLineIndicator -->

    <attr name="roundIndicatorStyle" format="reference"/>

    <declare-styleable name="XHBRoundIndicator">
        <attr name="borderRadius"/>
        <attr name="shadowRadius"/>
        <attr name="widthMode" />
        <attr name="paddingX" format="dimension"/>
        <attr name="paddingY" format="dimension"/>
        <attr name="color"/>
        <attr name="splitterHeight" format="dimension"/>
        <attr name="splitterColor" format="color"/>
    </declare-styleable>

    <dimen name="xhb_round_indicator_border_radius">8dp</dimen>
    <dimen name="xhb_round_indicator_shadow_radius">1dp</dimen>
    <dimen name="xhb_round_indicator_splitter_width">1dp</dimen>
    <dimen name="xhb_round_indicator_splitter_height">20dp</dimen>
    <color name="xhb_round_indicator_color">@color/bluegrey_00</color>
    <color name="xhb_round_indicator_splitter_color">@color/bluegrey_300</color>

    <style name="XHBRoundIndicator">
        <item name="borderRadius">@dimen/xhb_round_indicator_border_radius</item>
        <item name="shadowRadius">@dimen/xhb_round_indicator_shadow_radius</item>
        <item name="splitterHeight">@dimen/xhb_round_indicator_splitter_height</item>
        <item name="color">@color/xhb_round_indicator_color</item>
        <item name="splitterColor">@color/xhb_round_indicator_splitter_color</item>
        <item name="paddingX">7dp</item>
        <item name="paddingY">-1dp</item>
    </style>

    <!-- XHBTabTitleView -->

    <attr name="tabTitleStyle" format="reference"/>

    <declare-styleable name="XHBTabTitleView">
        <attr name="android:textColor"/>
        <attr name="textSizeNormal" format="dimension" />
        <attr name="textSizeSelected" format="dimension" />
    </declare-styleable>

    <color name="xhb_tab_title_color">@color/bluegrey800_selected</color>
    <dimen name="xhb_tab_text_size_normal">16sp</dimen>
    <dimen name="xhb_tab_text_size_selected">18sp</dimen>

    <style name="XHBTabTitleView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/xhb_tab_title_color</item>
        <item name="textSizeNormal">@dimen/xhb_tab_text_size_normal</item>
        <item name="textSizeSelected">@dimen/xhb_tab_text_size_selected</item>
    </style>

    <!-- XHBTabNavigator -->

    <attr name="tabNavigatorStyle" format="reference"/>

    <declare-styleable name="XHBTabNavigator">
        <attr name="backgroundColor"/>
        <attr name="borderRadius"/>
        <attr name="gravityCenter" format="boolean"/>
    </declare-styleable>

    <color name="xhb_tab_nav_frame_background_color">@color/bluegrey_05</color>
    <color name="xhb_tab_nav_round_background_color">@color/bluegrey_05</color>
    <dimen name="xhb_tab_nav_border_radius">8dp</dimen>

    <style name="XHBTabNavigator">
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="XHBTabNavigator.Flat" parent="XHBTabNavigator">
        <item name="backgroundColor">@color/bluegrey_00</item>
        <item name="gravityCenter">true</item>
    </style>

    <style name="XHBTabNavigator.Round" parent="XHBTabNavigator">
        <item name="backgroundColor">@color/xhb_tab_nav_round_background_color</item>
        <item name="borderRadius">@dimen/xhb_tab_nav_border_radius</item>
    </style>

    <style name="XHBTabNavigator.Frame" parent="XHBTabNavigator">
        <item name="backgroundColor">@color/xhb_tab_nav_frame_background_color</item>
    </style>

    <!-- XHBTabBar -->

    <attr name="tabBarStyle" format="reference"/>

    <declare-styleable name="XHBTabBar">
        <attr name="titles" format="reference"/>
        <attr name="navigatorStyle" format="reference"/>
    </declare-styleable>

    <dimen name="xhb_tab_bar_height">48dp</dimen>

    <style name="XHBTabBar">
        <item name="android:minHeight">@dimen/xhb_tab_bar_height</item>
        <item name="android:maxHeight">@dimen/xhb_tab_bar_height</item>
    </style>

</resources>
