<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ZLineIndicator -->

    <attr name="lineIndicatorStyle" format="reference"/>

    <declare-styleable name="ZLineIndicator">
        <attr name="widthMode">
            <enum name="match_edge" value="0"/>
            <enum name="wrap_content" value="1"/>
            <enum name="exactly" value="2"/>
        </attr>
        <attr name="lineWidth" format="dimension" />
        <attr name="lineHeight" format="dimension" />
        <attr name="longLineHeight" format="dimension" />
        <attr name="cornerRadius"/>
        <attr name="offsetX" format="dimension"/>
        <attr name="offsetY" format="dimension"/>
        <attr name="color"/>
        <attr name="longLineColor" format="color"/>
    </declare-styleable>

    <dimen name="line_indicator_line_width">24dp</dimen>
    <dimen name="line_indicator_line_height">4dp</dimen>
    <dimen name="line_indicator_long_line_height">1dp</dimen>
    <dimen name="line_indicator_border_radius">4dp</dimen>
    <dimen name="line_indicator_offset_x">4dp</dimen>
    <dimen name="line_indicator_offset_y">0dp</dimen>
    <color name="line_indicator_color">@color/brand_500</color>
    <color name="line_indicator_long_line_color">@color/bluegrey_100</color>

    <style name="ZLineIndicator">
        <item name="widthMode">exactly</item>
        <item name="lineWidth">@dimen/line_indicator_line_width</item>
        <item name="lineHeight">@dimen/line_indicator_line_height</item>
        <item name="cornerRadius">@dimen/line_indicator_border_radius</item>
        <item name="offsetX">@dimen/line_indicator_offset_x</item>
        <item name="offsetY">@dimen/line_indicator_offset_y</item>
        <item name="color">@color/line_indicator_color</item>
        <item name="longLineColor">@color/line_indicator_long_line_color</item>
    </style>

    <!-- ZLineIndicator -->

    <attr name="roundIndicatorStyle" format="reference"/>

    <declare-styleable name="ZRoundIndicator">
        <attr name="cornerRadius"/>
        <attr name="shadowRadius"/>
        <attr name="widthMode" />
        <attr name="paddingX" format="dimension"/>
        <attr name="paddingY" format="dimension"/>
        <attr name="color"/>
        <attr name="splitterHeight" format="dimension"/>
        <attr name="splitterColor" format="color"/>
    </declare-styleable>

    <dimen name="round_indicator_border_radius">8dp</dimen>
    <dimen name="round_indicator_shadow_radius">1dp</dimen>
    <dimen name="round_indicator_splitter_width">1dp</dimen>
    <dimen name="round_indicator_splitter_height">20dp</dimen>
    <color name="round_indicator_color">@color/bluegrey_00</color>
    <color name="round_indicator_splitter_color">@color/bluegrey_300</color>

    <style name="ZRoundIndicator">
        <item name="cornerRadius">@dimen/round_indicator_border_radius</item>
        <item name="shadowRadius">@dimen/round_indicator_shadow_radius</item>
        <item name="splitterHeight">@dimen/round_indicator_splitter_height</item>
        <item name="color">@color/round_indicator_color</item>
        <item name="splitterColor">@color/round_indicator_splitter_color</item>
        <item name="paddingX">7dp</item>
        <item name="paddingY">-1dp</item>
    </style>

    <!-- ZTabTitleView -->

    <attr name="tabTitleStyle" format="reference"/>

    <declare-styleable name="ZTabTitleView">
        <attr name="android:textColor"/>
        <attr name="textSizeNormal" format="dimension" />
        <attr name="textSizeSelected" format="dimension" />
    </declare-styleable>

    <color name="tab_title_color">@color/bluegrey_800_selected</color>
    <dimen name="tab_text_size_normal">16sp</dimen>
    <dimen name="tab_text_size_selected">18sp</dimen>

    <style name="ZTabTitleView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/tab_title_color</item>
        <item name="textSizeNormal">@dimen/tab_text_size_normal</item>
        <item name="textSizeSelected">@dimen/tab_text_size_selected</item>
    </style>

    <!-- ZTabNavigator -->

    <attr name="tabNavigatorStyle" format="reference"/>

    <declare-styleable name="ZTabNavigator">
        <attr name="backgroundColor"/>
        <attr name="cornerRadius"/>
        <attr name="gravityCenter" format="boolean"/>
    </declare-styleable>

    <color name="tab_nav_frame_background_color">@color/bluegrey_05</color>
    <color name="tab_nav_round_background_color">@color/bluegrey_05</color>
    <dimen name="tab_nav_border_radius">8dp</dimen>

    <style name="ZTabNavigator">
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ZTabNavigator.Flat" parent="ZTabNavigator">
        <item name="backgroundColor">@color/bluegrey_00</item>
        <item name="gravityCenter">true</item>
    </style>

    <style name="ZTabNavigator.Round" parent="ZTabNavigator">
        <item name="backgroundColor">@color/tab_nav_round_background_color</item>
        <item name="cornerRadius">@dimen/tab_nav_border_radius</item>
    </style>

    <style name="ZTabNavigator.Frame" parent="ZTabNavigator">
        <item name="backgroundColor">@color/tab_nav_frame_background_color</item>
    </style>

    <!-- ZTabBar -->

    <attr name="tabBarStyle" format="reference"/>

    <declare-styleable name="ZTabBar">
        <attr name="titles" format="reference"/>
        <attr name="navigatorStyle" format="reference"/>
    </declare-styleable>

    <dimen name="tab_bar_height">48dp</dimen>

    <style name="ZTabBar">
        <item name="android:minHeight">@dimen/tab_bar_height</item>
        <item name="android:maxHeight">@dimen/tab_bar_height</item>
    </style>

</resources>
