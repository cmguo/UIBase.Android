<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="avatarViewStyle" format="reference"/>

    <declare-styleable name="ZAvatarView">
        <attr name="clipType">
            <enum name="none" value="0"/>
            <enum name="circle" value="1"/>
            <enum name="ellipse" value="2"/>
            <enum name="roundSquare" value="3"/>
            <enum name="roundRect" value="4"/>
        </attr>
        <attr name="clipRegion">
            <enum name="wholeView" value="0"/>
            <enum name="drawable" value="1"/>
        </attr>
        <attr name="roundRadius" format="dimension"/>
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" />
    </declare-styleable>

    <style name="ZAvatarView">
    </style>

</resources>
