<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="dropDownStyle" format="reference"/>

    <declare-styleable name="ZDropDown">
        <attr name="backgroundColor"/>
        <attr name="cornerRadius"/>
        <attr name="shadowRadius" format="dimension" />
    </declare-styleable>

    <color name="drop_down_background_color">@color/bluegrey_00</color>
    <dimen name="drop_down_shadow_radius">6dp</dimen>
    <dimen name="drop_down_corner_radius">8dp</dimen>
    <dimen name="drop_down_max_height">400dp</dimen>
    <dimen name="drop_down_item_padding_x">16dp</dimen>
    <dimen name="drop_down_item_padding_y">12dp</dimen>
    <dimen name="drop_down_icon_size">24dp</dimen>
    <dimen name="drop_down_icon_padding">8dp</dimen>
    <!-- TODO: why can't use -->
    <style name="drop_down_text_appearance">@style/TextAppearance.Z.Body.Middle</style>

    <style name="ZDropDown">
        <item name="android:orientation">vertical</item>
        <item name="backgroundColor">@color/drop_down_background_color</item>
        <item name="shadowRadius">@dimen/drop_down_shadow_radius</item>
        <item name="cornerRadius">@dimen/drop_down_corner_radius</item>
    </style>

</resources>
