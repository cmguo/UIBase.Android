<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="searchBoxStyle" format="reference"/>

    <declare-styleable name="ZSearchBox">
        <attr name="rightButton"/>
    </declare-styleable>

    <dimen name="search_box_padding_x">16dp</dimen>
    <dimen name="search_box_padding_y">8dp</dimen>
    <dimen name="search_box_input_height">36dp</dimen>
    <dimen name="search_box_input_border_radius">18dp</dimen>
    <color name="search_box_background_color">@color/bluegrey_00</color>
    <color name="search_box_input_background_color">@color/bluegrey_05</color>

    <style name="ZSearchBox">
        <item name="android:paddingLeft">@dimen/search_box_padding_x</item>
        <item name="android:paddingRight">@dimen/search_box_padding_x</item>
        <item name="android:paddingTop">@dimen/search_box_padding_y</item>
        <item name="android:paddingBottom">@dimen/search_box_padding_y</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/search_box_background_color</item>
    </style>

    <!-- background drawable -->

    <style name="ZSearchBox.InputBackground">
        <item name="fillColor">@color/search_box_input_background_color</item>
        <item name="borderRadius">@dimen/search_box_input_border_radius</item>
    </style>

</resources>
