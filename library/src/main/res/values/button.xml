<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ZButton">
        <attr name="buttonType">
            <enum name="primitive" value="0"/>
            <enum name="secondary" value="1"/>
            <enum name="tertiary" value="2"/>
            <enum name="alert" value="3"/>
            <enum name="text" value="4"/>
        </attr>
        <attr name="buttonSize">
            <enum name="large" value="0"/>
            <enum name="middle" value="1"/>
            <enum name="small" value="2"/>
            <enum name="thin" value="3"/>
        </attr>
        <attr name="content" format="reference" />
        <attr name="icon" format="reference" />
        <attr name="iconPosition" format="enum">
            <enum name="left" value="0"/>
            <enum name="top" value="1"/>
            <enum name="right" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>
        <attr name="loadingIcon" format="reference" />
        <attr name="loadingText" format="reference|string" />
        <attr name="buttonAppearance" format="reference" />
    </declare-styleable>

    <declare-styleable name="ZButton.Type">
        <attr name="textColor"/>
        <attr name="backgroundColor"/>
        <attr name="iconPosition"/>
    </declare-styleable>

    <declare-styleable name="ZButton.Size">
        <attr name="height"/>
        <attr name="borderRadius"/>
        <attr name="paddingX"/>
        <attr name="textSize"/>
        <attr name="iconSize"/>
        <attr name="iconPadding"/>
    </declare-styleable>

    <style name="ZButton"><!-- parent="Widget.AppCompat.Button" TODO: erase shadow -->
        <item name="android:textAppearance">@style/EmptyTextAppearance</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="ZButton.Loading" parent="ZButton">
        <item name="loadingIcon">@drawable/button_loading_primary_anim</item>
        <item name="loadingText">"加载中..."</item>
    </style>

    <!-- Button Appearance Styles -->

    <style name="ZButton.Appearance">
    </style>

    <!-- Type Styles -->

    <style name="ZButton.Appearance.Primitive" parent="ZButton.Appearance">
        <item name="textColor">@color/bluegrey_900_disabled</item>
        <item name="backgroundColor">@color/brand_500_pressed_disabled</item>
    </style>

    <style name="ZButton.Appearance.Secondary" parent="ZButton.Appearance">
        <item name="textColor">@color/blue_600_disabled</item>
        <item name="backgroundColor">@color/blue_100_pressed_disabled</item>
    </style>

    <style name="ZButton.Appearance.Tertiary" parent="ZButton.Appearance">
        <item name="textColor">@color/bluegrey_800_disabled</item>
        <item name="backgroundColor">@color/bluegrey_100_pressed_disabled</item>
    </style>

    <style name="ZButton.Appearance.Danger" parent="ZButton.Appearance">
        <item name="textColor">@color/red_600_disabled</item>
        <item name="backgroundColor">@color/red_100_pressed_disabled</item>
    </style>

    <style name="ZButton.Appearance.Text" parent="ZButton.Appearance">
        <item name="textColor">@color/blue_600_disabled</item>
        <item name="backgroundColor">@color/transparent_pressed_disabled</item>
    </style>

    <!-- Size Styles -->

    <style name="ZButton.Appearance.Large" parent="ZButton.Appearance">
        <item name="height">44dp</item>
        <item name="borderRadius">24dp</item>
        <item name="paddingX">24dp</item>
        <item name="textSize">18sp</item>
        <item name="iconSize">20dp</item>
        <item name="iconPadding">5dp</item>
    </style>

    <style name="ZButton.Appearance.Middle" parent="ZButton.Appearance">
        <item name="height">36dp</item>
        <item name="borderRadius">18dp</item>
        <item name="paddingX">16dp</item>
        <item name="textSize">16sp</item>
        <item name="iconSize">18dp</item>
        <item name="iconPadding">4dp</item>
    </style>

    <style name="ZButton.Appearance.Small" parent="ZButton.Appearance">
        <item name="height">24dp</item>
        <item name="borderRadius">12dp</item>
        <item name="paddingX">12dp</item>
        <item name="textSize">14sp</item>
        <item name="iconSize">16dp</item>
        <item name="iconPadding">3dp</item>
    </style>

    <style name="ZButton.Appearance.Thin" parent="ZButton.Appearance">
        <item name="height">24dp</item>
        <item name="borderRadius">0dp</item>
        <item name="paddingX">0dp</item>
        <item name="textSize">14sp</item>
        <item name="iconSize">16dp</item>
        <item name="iconPadding">3dp</item>
    </style>

</resources>
