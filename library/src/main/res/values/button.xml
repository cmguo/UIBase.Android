<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ZButton">
        <attr name="buttonType">
            <enum name="primitive" value="0"/>
            <enum name="secondary" value="1"/>
            <enum name="tertiary" value="2"/>
            <enum name="alert" value="3"/>
            <enum name="text" value="4"/>
        </attr>
        <attr name="buttonSize">
            <enum name="small" value="0"/>
            <enum name="middle" value="1"/>
            <enum name="large" value="2"/>
        </attr>
        <attr name="icon" format="reference" />
        <attr name="iconAtRight" format="boolean" />
        <attr name="loadingDrawable" format="reference" />
        <attr name="loadingText" format="reference|string" />
    </declare-styleable>

    <style name="ZButton"><!-- parent="Widget.AppCompat.Button" TODO: erase shadow -->
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="loadingDrawable">@drawable/button_loading_primary_anim</item>
        <item name="loadingText">"加载中..."</item>
    </style>

    <dimen name="button_height_small">24dp</dimen>
    <dimen name="button_height_middle">36dp</dimen>
    <dimen name="button_height_large">44dp</dimen>

    <dimen name="button_radius_small">12dp</dimen>
    <dimen name="button_radius_middle">18dp</dimen>
    <dimen name="button_radius_large">24dp</dimen>

    <dimen name="button_padding_small">12dp</dimen>
    <dimen name="button_padding_middle">16dp</dimen>
    <dimen name="button_padding_large">24dp</dimen>

    <dimen name="button_iconPadding_small">3dp</dimen>
    <dimen name="button_iconPadding_middle">4dp</dimen>
    <dimen name="button_iconPadding_large">5dp</dimen>

    <dimen name="button_textSize_small">14sp</dimen>
    <dimen name="button_textSize_middle">16sp</dimen>
    <dimen name="button_textSize_large">18sp</dimen>

</resources>
