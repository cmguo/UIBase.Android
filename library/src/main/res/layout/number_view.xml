<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/number_view_width"
    android:layout_height="@dimen/number_view_height"
    android:padding="@dimen/number_view_padding"
    android:focusable="true"
    android:orientation="horizontal">

    <Button
        android:id="@+id/buttonDec"
        android:layout_width="@dimen/number_view_button_size"
        android:layout_height="@dimen/number_view_button_size"
        android:layout_gravity="center_vertical"
        android:gravity="center"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="60dp"
        android:layout_weight="1"
        android:background="@null"
        android:textColor="@color/bluegrey_800"
        android:textSize="@dimen/number_view_text_size"
        android:inputType="number"
        android:gravity="center"
        android:text="0"/>

    <Button
        android:id="@+id/buttonInc"
        android:layout_width="@dimen/number_view_button_size"
        android:layout_height="@dimen/number_view_button_size"
        android:layout_gravity="center_vertical"
        android:gravity="center"/>
</LinearLayout>
