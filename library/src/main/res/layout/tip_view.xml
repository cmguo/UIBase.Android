<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.xhb.uibase.widget.XHBButton
        android:id="@+id/leftButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/tip_view_padding_x"
        app:buttonType="text"
        app:buttonSize="thin"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/tip_view_icon_size"
        android:layout_height="@dimen/tip_view_icon_size"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/tip_view_icon_padding"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:ellipsize="marquee"/>

    <com.xhb.uibase.widget.XHBButton
        android:id="@+id/rightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/tip_view_padding_x"
        app:buttonType="text"
        app:buttonSize="thin"
        android:visibility="gone"/>

</merge>