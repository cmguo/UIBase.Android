<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_app_loading_bg">

        <ImageView
            android:id="@+id/iv_mouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:src="@drawable/ic_app_loading_line" />

        <ImageView
            android:id="@+id/iv_left_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/iv_mouth"
            android:layout_alignLeft="@id/iv_mouth"
            android:layout_marginBottom="4dp"
            android:src="@drawable/ic_app_loading_left" />

        <ImageView
            android:id="@+id/iv_right_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/iv_mouth"
            android:layout_alignRight="@id/iv_mouth"
            android:layout_marginBottom="4dp"
            android:src="@drawable/ic_app_loading_left" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/xlistview_header_hint_loading"
        android:textColor="@android:color/white"
        android:textSize="@dimen/normal_textsize" />
</LinearLayout>