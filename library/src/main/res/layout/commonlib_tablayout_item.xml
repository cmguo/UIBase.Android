<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false">

    <RelativeLayout
        android:id="@+id/layout_tab"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:clipChildren="false">
        <TextView
            android:id="@+id/tab_item_text"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:paddingLeft="11.5dp"
            android:paddingRight="11.5dp"
            android:gravity="center"
            android:textColor="@color/bluegrey_500"
            android:textSize="16sp"
            tools:text="打卡"/>

        <View
            android:id="@+id/tab_item_indicator"
            android:layout_width="18dp"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="7dp"
            android:background="@drawable/bg_tab_item_indicator"
            android:visibility="invisible"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/tab_item_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/tab_item_text"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="-3dp"
            android:src="@drawable/msg_ongoing"
            android:visibility="gone"
            tools:visibility="visible"/>
    </RelativeLayout>
</RelativeLayout>
