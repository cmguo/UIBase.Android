<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/commonlib_dialog_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/bluegrey_900"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="我是标题"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/edt_mobile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/space_normal_16"
            android:background="@drawable/commonlib_dialog_input_bg"
            android:gravity="start|center_vertical"
            android:hint="@string/login_name_hint"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingStart="12dp"
            android:paddingEnd="6dp"
            android:textColor="@color/bluegrey_800"
            android:textColorHint="@color/bluegrey_500"
            android:textCursorDrawable="@drawable/shape_edit_text_cursor"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/commonlib_dialog_input_bg">

            <EditText
                android:id="@+id/edt_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="@string/register_input_activation"
                android:inputType="number"
                android:maxLength="6"
                android:paddingStart="12dp"
                android:paddingEnd="6dp"
                android:textColor="@color/bluegrey_800"
                android:textColorHint="@color/bluegrey_500"
                android:textCursorDrawable="@drawable/shape_edit_text_cursor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/space_small_12"
                android:text="@string/get_sms_verification"
                android:textColor="@color/blue_600"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/dialog_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/action1"
                style="@style/LightRedButtonStyle"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                tools:text="action1" />

            <TextView
                android:id="@+id/action2"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textColor="@color/bluegrey_800"
                android:textSize="@dimen/sp_16"
                tools:text="action2" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
