<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    tools:visibility="visible">


    <TextView
        android:id="@+id/not_well_network_reload_btn"
        android:layout_width="163dp"
        android:layout_height="44dp"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:textColor="@color/blue_600"
        tools:text="@string/page_reload" />

    <TextView
        android:id="@+id/not_well_network_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/not_well_network_reload_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textColor="@color/static_bluegrey_500" />

    <ImageView
        android:id="@+id/not_well_network_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/not_well_network_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

</RelativeLayout>
