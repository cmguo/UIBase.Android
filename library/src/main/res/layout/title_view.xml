<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/bluegrey_00">

    <RelativeLayout
        android:id="@+id/layout_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/left_text_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="5"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:textColor="@color/bluegrey_900"
            android:textSize="@dimen/big_textsize"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="文字按钮" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:src="@drawable/icon_20px_arrow_left"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/iv_web_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_back"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="@drawable/icon_20px_arrow_left"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/left_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_back"
            android:layout_marginLeft="11dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/bluegrey_900"
            android:textStyle="bold"
            android:textSize="@dimen/big_textsize"
            tools:text="靠左标题" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/layout_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:paddingLeft="8dp"
            android:paddingRight="16dp"
            android:visibility="gone"
            tools:src="@drawable/icon_20px_share"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/iv_right1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="44dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            tools:visibility="visible"
            tools:src="@drawable/icon_20px_share"
            android:visibility="gone" />

        <TextView
            android:id="@+id/right_btn"
            style="@style/YellowSmallButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:minWidth="56dp"
            android:textSize="@dimen/small_textsize"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="发送"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/right_text_btn"
            style="@style/NormalBlueTextBtnStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="5"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textSize="@dimen/big_textsize"
            android:visibility="gone"
            tools:text="文字按钮"
            tools:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/bluegrey_900"
            android:textStyle="bold"
            android:textSize="@dimen/big_textsize"
            tools:text="主标标题主标题主标题主标题主标题主标题" />
    </LinearLayout>
</RelativeLayout>
