<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/xhb_drop_down_item_padding_y"
        android:paddingBottom="@dimen/xhb_drop_down_item_padding_y"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/xhb_drop_down_icon_size"
        android:layout_height="@dimen/xhb_drop_down_icon_size"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/xhb_drop_down_icon_padding"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:textAppearance="@style/TextAppearance.XHB.Body.Middle"
        android:singleLine="true"
        android:ellipsize="end"
        />

</LinearLayout>